# MenEscape Production Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# PORTS
# =============================================================================
FRONTEND_PORT=3000
BACKEND_PORT=3001

# =============================================================================
# API URL (Used by frontend to connect to backend)
# This URL is baked into the frontend at build time.
# For VPS: Use your server's public IP or domain (e.g., http://your-domain.com:3001/api)
# For local: Use http://localhost:3001/api
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# =============================================================================
# SECURITY
# =============================================================================
# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=menescape-jwt-secret-key-2024-change-me

# Admin Credentials - CHANGE THESE IN PRODUCTION!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here

# =============================================================================
# GOOGLE OAUTH (Optional)
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
